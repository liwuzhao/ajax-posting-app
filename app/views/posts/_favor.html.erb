<% if post.favor_users.any? %>
  <%= post.favor_users.map{ |u| u.display_name }.join(",") %> 点了赞
<% end %>

<% if current_user # 有登入才可以按讚 %>
  <% if !post.find_favor(current_user) %>
    <%= link_to "收藏", favor_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% else %>
    <%= link_to "取消收藏", unfavor_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% end %>
<% end %>
